<!doctype html>
<html>
<head>
  <meta charset="utf-8"/>
  <title>{% block title %}Library Demo{% endblock %}</title>
  <style>
    body { font-family: system-ui, sans-serif; margin: 2rem; }
    nav a { margin-right: 1rem; }
    table { border-collapse: collapse; width: 100%; }
    th, td { border: 1px solid #ddd; padding: 8px; }
    .flash { padding:.5rem 1rem; margin:.5rem 0; border-radius:.25rem; }
    .flash-success{ background:#e6ffed; border:1px solid #a6f3b6; }
    .flash-error{ background:#ffecec; border:1px solid #ffb3b3; }
  </style>
</head>
<body>
  <nav>
    <a href="{{ path('books_index') }}">Books</a>
    <a href="{{ path('books_new') }}">New Book</a>
    {# <a href="{{ path('authors_index') }}">Authors</a>
    <a href="{{ path('authors_new') }}">New Author</a> #}
  </nav>

  {% for type, msgs in app.flashes %}
    {% for msg in msgs %}
      <div class="flash flash-{{ type }}">{{ msg }}</div>
    {% endfor %}
  {% endfor %}

  {% block body %}{% endblock %}
</body>
</html>