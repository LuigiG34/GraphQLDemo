{% extends 'base.html.twig' %}
{% block body %}
{% set idNum = book.id|replace({'/books/':''}) %}
<h1>Book #{{ idNum }}</h1>
<p><strong>Title:</strong> {{ book.title }}</p>
<p><strong>Author:</strong> {{ book.author ? book.author.name : '—' }}</p>
<p><strong>Published:</strong> {{ book.publishedAt ?: '—' }}</p>
<p><a href="{{ path('books_index') }}">Back</a></p>
{% endblock %}
